{
  "name": "FAP GPA",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Extension for calculating Total GPA and semester GPA",
  "homepage_url": "https://github.com/ruskicoder/fap-gpa",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "FAP GPA"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "http://fap.fpt.edu.vn/Grade/StudentTranscript.aspx",
    "https://fap.fpt.edu.vn/Grade/StudentTranscript.aspx"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://fap.fpt.edu.vn/Grade/StudentTranscript.aspx",
        "http://fap.fpt.edu.vn/Grade/StudentTranscript.aspx"
      ],
      "css": ["css/gpa.css"],
      "js": [
        "js/define.js",
        "js/util.js",
        "js/const.js",
        "js/nonGPA.js",
        "js/logic.js"
      ],
      "run_at": "document_end"
    }
  ]
}
